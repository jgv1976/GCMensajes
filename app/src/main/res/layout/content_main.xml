<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.miappgcm.gcmensajes.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#000"
    android:padding="20dp">



        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Usuario:"
            android:id="@+id/tv_imei"
            android:layout_gravity="center_horizontal"
            android:autoText="true"
            android:textColor="#fff"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="5dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/tv_userid"
            android:background="#a6edd8"
            android:layout_marginTop="5dp"
            android:layout_margin="5dp"
            android:paddingLeft="10dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Registrar"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:onClick="registrarDispositivo" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Desregistrar"
        android:id="@+id/button4"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:onClick="desregistrarDispositivo" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Envia notificacion"
        android:id="@+id/button2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:onClick="notificacion" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Comprobar conexion Internet"
        android:id="@+id/button3"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:onClick="comprobarConectividad"
        android:singleLine="true" />

</LinearLayout>
